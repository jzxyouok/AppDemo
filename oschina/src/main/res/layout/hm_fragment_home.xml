<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F6F6F6" />

    <RadioGroup
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:checkedButton="@+id/rb_news"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/home_tab_item"
            android:drawableTop="@drawable/hm_home_tab_news"
            android:text="综合" />

        <RadioButton
            android:id="@+id/rb_tweet"
            style="@style/home_tab_item"
            android:drawableTop="@drawable/hm_home_tab_tweet"
            android:text="动弹" />

        <ImageButton
            android:id="@+id/ib_quick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/hm_home_tab_quick" />

        <RadioButton
            android:id="@+id/rb_explore"
            style="@style/home_tab_item"
            android:drawableTop="@drawable/hm_home_tab_explore"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/home_tab_item"
            android:drawableTop="@drawable/hm_home_tab_mine"
            android:text="我" />
    </RadioGroup>

</LinearLayout>